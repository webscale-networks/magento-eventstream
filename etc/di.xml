<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Webscale\EventStream\Logger\Handler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>
    <type name="Webscale\EventStream\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">webscale-eventstream</argument>
            <argument name="handlers"  xsi:type="array">
                <item name="system" xsi:type="object">Webscale\EventStream\Logger\Handler</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Framework\HTTP\Client\Curl">
        <arguments>
            <argument name="options" xsi:type="array">
                <item name="timeout" xsi:type="number">5</item>
                <item name="connect_timeout" xsi:type="number">3</item>
            </argument>
        </arguments>
    </type>
</config>
